extends ../../layout/common

block content

	h5.display-4 Product

	.d-flex.align-items-center
		form.ml-auto(action="/products/search", method="GET", class="d-flex")
			input.form-control(type="text", name="q")
			button.btn.btn-primary.ml-2 Search
	.row
		each product in products
			.col-sm-6.col-md-4.col-lg-3
				.card.mb-3
					img.card-img-top(src=product.image)
					.card-body
						h5.card-title= product.name
						p.card-text= product.description
						a.btn.btn-primary(href="/Cart/add/" + product.id) Add to cart

	nav(aria-label='Page navigation example')
		ul.pagination
			li.page-item
				a.page-link(href='/products/?page=' + pagePrevious, aria-label='Previous')
					span(aria-hidden='true') &laquo;
					span.sr-only Previous
			li.page-item
				a.page-link(href='/products/?page=' + pagePrevious)=page - 1 
			li.page-item
				a.page-link(href='/products/?page=' + page)=page 
			li.page-item
				a.page-link(href='/products/?page=' + pageNext)=page + 1
			li.page-item
				a.page-link(href='/products/?page=' + pageNext, aria-label='Next')
					span(aria-hidden='true') &raquo;
					span.sr-only Next
